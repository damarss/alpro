Program Prima2;var i,j,n,belakang,depan:integer;    isprima,isbelakang,isdepan:boolean;begin    writeln('Input bilangan bulat positif lebih besar dari ');    write('  n= ');readln(n);        //mencari bilangan prima sebelum    isbelakang:=false;    belakang:=n;    while (not isbelakang) or (belakang>1)  do     begin        isprima:=true;        for i:=2 to round(sqrt(belakang)) do            if (belakang mod i)=0 then             begin                isprima:=false;                break;            end;        isbelakang:=isprima;        belakang:=belakang-1;    end;    writeln(belakang+1);	readln;end.